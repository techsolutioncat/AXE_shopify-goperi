{% style %}
	#shopify-section-{{ section.id }} h2.heading {
    font-family: "RocGrotesk-Regular";
		font-size: 35PX;
	}
  #shopify-section-{{ section.id }} .testing_process .img_bx {
    background-image: url({{ 'arrow.png' | asset_url }});
    background-position: right center;
    background-repeat: no-repeat;
    background-size: 46px;
  }
  #shopify-section-{{ section.id }} .testing_process .item-last {
    background-image: none;
  }
  #shopify-section-{{ section.id }} .testing_process .img_bx.no {
    background-image: none;
  }

  #shopify-section-{{ section.id }} .testing_process .img_bx img {
    display: block;
  }

  #shopify-section-{{ section.id }} .testing_process .img_bx span {
    margin: -50px 0 0 8px;
    display: block;
    text-align: left;
    font-size: 22px;
    font-weight: 500;
    font-family: "RocGrotesk-Regular";
    color: #000;
    padding: 0 30px 0 0;
    line-height: 25px;
  }
  @media (max-width: 1400px) {
    #shopify-section-{{ section.id }} .testing_process {
      padding: 60px 25px;
    }
  }
  @media (max-width: 500px) {
    #shopify-section-{{ section.id }} h2.heading {
      font-size: 18px;
    }
    #shopify-section-{{ section.id }} .testing_process .img_bx span {
      font-size: 12px;
      line-height: 15px;
      padding-right: 15px;
      padding-top: 20px;
    }
    #shopify-section-{{ section.id }} .testing_process .img_bx {
      background-size: 30px;
      margin-right: -10px;
    }
  }
{% endstyle %}

<section class="testing_process">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="row justify-content-center">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="img_bx item-{% if forloop.last == true %}last{% endif %}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 500 }}" class="photo">
              {% endif %}
              {% if block.settings.title != blank %}
                <span class="block-title">{{ block.settings.title }}</span>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testing process",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "Process",
      "name": "Block",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testing process"
    }
  ]
}
{% endschema %}
